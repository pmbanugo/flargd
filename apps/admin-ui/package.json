{
  "name": "admin-ui",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "pnpm run generate:css --minify",
    "build:remix": "remix build",
    "dev": "run-p \"dev:*\"",
    "dev:css": "pnpm run generate:css --watch",
    "dev:remix": "remix watch",
    "devi:wrangler": "cross-env NODE_ENV=development wrangler dev --persist --local",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "deploy": "wrangler publish",
    "generate:css": "pnpm dlx tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.12.0",
    "@remix-run/cloudflare-workers": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@yaireo/tagify": "^4.17.7",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20221111.1",
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@tailwindcss/forms": "^0.5.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/yaireo__tagify": "^4.16.1",
    "eslint": "^8.27.0",
    "miniflare": "^2.12.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "wrangler": "2.8.0"
  },
  "engines": {
    "node": ">=18.10"
  },
  "author": "Peter Mbanugo"
}
